<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="50dp"
    android:layout_height="200dp"
    android:layout_margin="20dp"
    >

    <LinearLayout
        android:id="@+id/ll_x_small_brush"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:clickable="true"
        android:contextClickable="true"
        android:gravity="center"
        app:layout_constraintBottom_toTopOf="@+id/ll_small_brush"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <ImageView
            android:id="@+id/ib_x_small_brush"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/brush_x_small" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/ll_small_brush"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:clickable="true"
        android:gravity="center"
        app:layout_constraintBottom_toTopOf="@+id/ll_medium_brush"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/ll_x_small_brush">

        <ImageView
            android:id="@+id/ib_small_brush"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/brush_small" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/ll_medium_brush"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:clickable="true"
        android:gravity="center"
        app:layout_constraintBottom_toTopOf="@+id/ll_large_brush"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/ll_small_brush">

        <ImageView
            android:id="@+id/ib_medium_brush"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:background="@drawable/brush_medium" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/ll_large_brush"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:clickable="true"
        android:gravity="center"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/ll_medium_brush">

        <ImageView
            android:id="@+id/ib_large_brush"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:background="@drawable/brush_large"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/ll_medium_brush"

            />

    </LinearLayout>


</androidx.constraintlayout.widget.ConstraintLayout>